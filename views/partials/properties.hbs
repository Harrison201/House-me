<div class="container mx-auto px-4 py-8 mt-11">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {{#each properties}}
        <a href="/property/{{@index}}" class="block">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Property Image -->
                <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-48 object-cover" />

                <!-- Property Content -->
                <div class="p-4">
                    <!-- Title -->
                    <h3 class="text-lg font-semibold text-gray-800">{{this.title}}</h3>

                    <!-- Beds, Baths & Area -->
                    <div class="flex items-center justify-start text-sm text-green-600 mt-3">
                        <span class="mr-4"><i class="fas fa-expand-arrows-alt"></i> 8000sqf</span>
                        <span class="mr-4"><i class="fas fa-bed"></i> {{this.beds}} Beds</span>
                        <span><i class="fas fa-bath"></i> {{this.baths}} Baths</span>
                    </div>

                    <!-- Rent & Location (Aligned Fields) -->
                    <div class="mt-4 flex justify-between items-center">
                        <div class="w-1/2">
                            <span class="block text-gray-600">Rent</span>
                            <span class="font-semibold text-lg">{{this.price}}</span>
                        </div>
                        <div class="w-1/2 text-right">
                            <span class="block text-gray-600">Location</span>
                            <p>{{this.location}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>

