</div>


    {{> properties }}

    <div class="bg-blue-800 text-white flex items-center justify-between px-8 py-6 rounded-lg">
        <!-- Text Section -->
        <div class="flex-1">
            <h2 class="text-3xl font-bold">Want To List your Property?</h2>
        </div>

        <!-- Button Section -->
        <div class="flex-shrink-0">
            <a href="#signup"
                class="inline-block bg-red-600 text-white font-semibold py-3 px-6 rounded-full hover:bg-red-700 transition duration-300">
