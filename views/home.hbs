<body class="bg-white">

    <section class="bg-amber-400 relative h-[40vh] flex items-center justify-center px-4 md:px-10">
        <!-- Background Image on Bottom Right -->
        <div class="absolute inset-10 bg-cover bg-no-repeat opacity-80 right-0"
            style="background-image: url('/images/Asset 2.png'); bottom: 0; width: 400px;"></div>

        <!-- Section Content -->
        <div class="relative z-10 max-w-xl mx-auto text-center flex flex-col items-center justify-center">
            <!-- Heading -->
            <h2 class="text-5xl mb-6 text-black">Find your <span class="font-bold text-white">Perfect Place</span></h2>

            <!-- Radio Buttons, Search Input and Button (Horizontal Alignment) -->
            <div class="bg-white pt-4 pb-2 pr-8 pl-8 rounded-lg shadow-lg">
                <div
                    class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0 md:space-x-6 mb-4">
                    <!-- Radio Buttons -->
                    <div class="flex space-x-6 justify-center md:justify-start">
                        <label class="flex items-center space-x-2">
                            <input type="radio" name="search-option"
                                class="text-yellow-700 border-gray-300 focus:ring-yellow-400" />
                            <span class="text-black font-bold">Buy</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="radio" name="search-option"
                                class="text-yellow-700 border-gray-300 focus:ring-yellow-400" />
                            <span class="text-black font-bold">Rent</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="radio" name="search-option"
                                class="text-yellow-700 border-gray-300 focus:ring-yellow-400" />
                            <span class="text-black font-bold">Sale</span>
                        </label>
                    </div>

                    <!-- Search Input and Button -->
                    <div class="flex items-center space-x-4 justify-center md:justify-end">
                        <i class="fas fa-map-marker-alt mr-2"></i>
                        <input type="text" placeholder="Search for property" class="w-64 p-2 border-none text-black" />
                        <button
                            class="px-4 py-2 bg-red-600 text-white font-bold rounded hover:bg-red-700 flex justify-between">
                            <i class="fas fa-search mr-2"></i>Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

